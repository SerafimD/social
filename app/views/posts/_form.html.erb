
<%= form_for(@post) do |f| %>

<div class="field">
  <%= f.label :content %> <br />
  <%= f.text_field :content, autofocus: true, autocomplete: "off"%>
</div><br />


<div class="field">
  <%= f.label :publish_date %> <br />
  <%= f.date_select :publish_date %>
</div><br />

<div class="actions">
  <%= f.submit "Save" %>
</div>

<% end %>
